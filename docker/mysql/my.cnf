[mysqld]
# General configurations
bind-address = 0.0.0.0
port = 3306

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Performance tuning for MySQL 5.7
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Query cache (available in MySQL 5.7)
query_cache_type = 1
query_cache_size = 32M
query_cache_limit = 2M

# Logging
general_log = 0
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Connection settings
max_connections = 100
connect_timeout = 60
wait_timeout = 28800

# SQL Mode (compatible with older applications)
sql_mode = "STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION"

# Security
skip_name_resolve = 1

# MyISAM settings (still relevant in 5.7)
key_buffer_size = 32M

# Thread settings
thread_cache_size = 8
thread_stack = 256K

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4